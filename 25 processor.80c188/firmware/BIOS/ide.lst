   163                              <1>  range   RAM_WS,0,3
   164                              <1>  range   ROM_WS,0,3
   165                              <1>  range   RAM_DOS,RAM,(1024-ROM)
   166                              <1>  range   LCL_IO_WS,0,3
   167                              <1>  range   BUS_IO_WS,0,3
   168                              <1>  range   UART_OSC,500000,16000000
   169                              <1>  range   UART_RATE,0,7
   170                              <1>  range	 UART,0,1
   171                              <1>  range	 _terminal,1,2
   172                              <1> 
   173                              <1> %ifndef SOFT_DEBUG
   174                              <1> %define SOFT_DEBUG 0
   175                              <1> %endif
   176                              <1> 
   177                              <1> %ifndef TRACE
   178                              <1> %define TRACE 0
   179                              <1> %endif
