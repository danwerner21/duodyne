    77                              <1> ; Packet call offsets
    78                              <1> ;
    79                              <1> pkt_size        equ     0       ; byte, size of packet (==16)
    80                              <1> pkt_reserved1   equ     1       ; byte, reserved, must be zero
    81                              <1> pkt_blocks      equ     2       ; byte, number of blocks to transfer
    82                              <1>                                 ; max is 127 (7Fh); 0 means no transfer
    83                              <1> pkt_reserved3   equ     3       ; byte; reserved, must be zero
    84                              <1> pkt_address     equ     4       ; dword; segment:offset of transfer
    85                              <1> pkt_LBA         equ     8       ; qword; LBA of transfer
    86                              <1> ; for convenience:
    87                              <1> pkt_LBA0        equ     8       ; word
    88                              <1> pkt_LBA1        equ     10      ; word
    89                              <1> pkt_LBA2        equ     12      ; word          ; MBZ
    90                              <1> pkt_LBA3        equ     14      ; word          ; MBZ
    91                              <1> 
    92                              <1> ; Parameter Packet returns:
    93                              <1> ;
    94                              <1> ;pkt_size       equ     0       ; word
    95                              <1> pkt_info        equ     2       ; word, information bits
    96                              <1>         ; bit   usage
    97                              <1>         ;  0    DMA boundary errors are handled transparently
    98                              <1>         ;  1    Geometry valid (bytes 8-12)
    99                              <1>         ;  2    Removable device (no)
   100                              <1>         ;  3    Supports Write with Verify (no)
   101                              <1>         ;  4    change line support (no)
   102                              <1>         ;  5    removable & lockable (no)
   103                              <1>         ;  6    max. geometry for a removable drive (no)
   104                              <1>         ;  7-15  MBZ
   105                              <1> pkt_phys_cyl    equ     4       ; dword, physical cylinders
   106                              <1> pkt_phys_hds    equ     8       ; dword, physical heads
   107                              <1> pkt_phys_spt    equ     12      ; dword, sectors per track
   108                              <1> pkt_sectors     equ     16      ; qword, total number of sectors
   109                              <1> pkt_bytes       equ     24      ; word, bytes per sector
   110                              <1> pkt_ptr         equ     26      ; dword, EDD configuration paramter pointer
   111                              <1>                                 ; FFFF:FFFF means invalid pointer
