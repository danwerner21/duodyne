   153                              <1>  %elif (%1)>(%3)
   154                              <1>    %error Out of Range: %1
   155                              <1>  %endif
   156                              <1> %endm
   157                              <1> _terminal equ UART
   158                              <1>  check   RAM_DOS&15
   159                              <1>  check   RAM&(RAM-1)
   160                              <1>  check   ROM&(ROM-1)
   161                              <1>  range   RAM,32,512
