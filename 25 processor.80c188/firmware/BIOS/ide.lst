   133                              <1> 
   134                              <1> ; Define existence of any uart chip
   135                              <1> UART		equ	TTY+DUMB+ANSI+WYSE
   136                              <1> startuplength   equ     512                     ; may be up to 1024
   137                              <1> startseg        equ     0FFFFh - (ROM*64) + 1
   138                              <1> highrom         equ     (ROM*400h)&0FFFFh
   139                              <1> startupseg      equ     0FFFFh - (startuplength>>4) + 1
   140                              <1> bios_data_seg   equ     040h            ; segment of BIOS data area
   141                              <1> 
