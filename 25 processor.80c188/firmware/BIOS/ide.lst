    33                              <1> ;               MOV    BP,SP
    34                              <1> ;
    35                              <1> offset_DI       equ     0
    36                              <1> offset_SI       equ     offset_DI+2
    37                              <1> offset_BP       equ     offset_SI+2
    38                              <1> offset_SP       equ     offset_BP+2
    39                              <1> offset_BX       equ     offset_SP+2
    40                              <1> offset_DX       equ     offset_BX+2
    41                              <1> offset_CX       equ     offset_DX+2
    42                              <1> offset_AX       equ     offset_CX+2
    43                              <1> offset_DS       equ     offset_AX+2
    44                              <1> offset_ES       equ     offset_DS+2
    45                              <1> offset_IP       equ     offset_ES+2
    46                              <1> offset_CS       equ     offset_IP+2
    47                              <1> offset_FLAGS    equ     offset_CS+2
    48                              <1> 
    49                              <1> ; The byte registers in the stack
    50                              <1> offset_AL       equ     offset_AX
    51                              <1> offset_AH       equ     offset_AX+1
    52                              <1> offset_BL       equ     offset_BX
    53                              <1> offset_BH       equ     offset_BX+1
    54                              <1> offset_CL       equ     offset_CX
    55                              <1> offset_CH       equ     offset_CX+1
    56                              <1> offset_DL       equ     offset_DX
    57                              <1> offset_DH       equ     offset_DX+1
    58                              <1> 
