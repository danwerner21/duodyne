    60                              <1> ;
    61                              <1> ERR_no_error            equ     0       ; no error (return Carry clear)
    62                              <1> ;   everything below returns with the Carry set to indicate an error
    63                              <1> ERR_invalid_command     equ     1
    64                              <1> ERR_address_mark_not_found      equ     2
    65                              <1> ERR_write_protect       equ     3
    66                              <1> ERR_sector_not_found    equ     4
    67                              <1> ERR_disk_removed        equ     6
    68                              <1> ERR_dma_overrun         equ     8
    69                              <1> ERR_dma_crossed_64k     equ     9
    70                              <1> ERR_media_type_not_found        equ     12
    71                              <1> ERR_uncorrectable_CRC_error     equ     10h
    72                              <1> ERR_controller_failure  equ     20h
