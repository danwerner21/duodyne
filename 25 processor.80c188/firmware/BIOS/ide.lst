    38                              <1> ;
    39                              <1> ; Define the serial terminal that the Video BIOS must emulate
    40                              <1> ; Set one of the following to 1
    41                              <1> ; If you have no idea what to choose, set TTY to 1
    42                              <1> TTY     equ     0       ; hardcopy -- cannot position the cursor
    43                              <1> DUMB    equ     0       ; dumb CRT -- ^H, ^J, ^K, ^L can move the cursor
    44                              <1> ANSI    equ     1       ; very smart, like a VT-100
    45                              <1> WYSE    equ     0       ; very smart Wyse series (30, 50, ...)
    46                              <1> ; others may get added in the future
    47                              <1> ;  ONE OF THE ABOVE must BE SET TO 1!!!!!
    48                              <1> ;
    49                              <1> ; Define the UART startup bit rate - 1200-19200 are most common
    50                              <1> ;UART_RATE	equ	0		; 1200
    51                              <1> ;UART_RATE	equ	1		; 2400
    52                              <1> ;UART_RATE	equ	2		; 4800
    53                              <1> UART_RATE	equ	3		; 9600
    54                              <1> ;UART_RATE	equ	4		; 19200
    55                              <1> ;UART_RATE	equ	5		; 38400
    56                              <1> ;UART_RATE	equ	6		; 57600
    57                              <1> ;UART_RATE	equ	7		; 115200
    58                              <1> 
    59                              <1> ; Does the serial terminal use the DSR/DTR protocol for flow control?
    60                              <1> ;UART_DSR_PROTOCOL	equ		1	; Yes!
    61                              <1> UART_DSR_PROTOCOL       equ             WYSE    ; Wyse always uses it
    62                              <1> 						; but not ANSI
    63                              <1> ; Define the size of the ROM image on the system in Kilobytes
    64                              <1> ; It may be smaller than the actual EPROM in use.
    65                              <1> ; The following sizes are supported:  32, 64, 128, and 256
    66                              <1> %ifndef ROM
    67                              <1> ROM             equ     32              ; 64 is the default
    68                              <1> %endif
    69                              <1> 
    70                              <1> ; Define the number of Wait States at which the ROM operates
    71                              <1> ROM_WS          equ     1               ; 0..3  (1 is the default)
    72                              <1> 
    73                              <1> ; Define the size in Kilobytes of DOS RAM (low SRAM plus EMM allocate RAM)
    74                              <1> ; This is a desired size and will only be present if a 4MEM board is added
    75                              <1> RAM_DOS         equ     640
    76                              <1> 
    77                              <1> ; Define the size of the low SRAM on the system in Kilobytes
    78                              <1> ; the default is 512 kilobytes
    79                              <1> RAM             equ     512             ; (512 is the default)
    80                              <1> 
    81                              <1> ; Define the number of Wait States at which the RAM operates
    82                              <1> RAM_WS          equ     0               ; 0..3  (0 is the default)
    83                              <1> 
    84                              <1> ; Define the number of Wait States for Local Peripheral devices (600-7FF)
    85                              <1> LCL_IO_WS       equ     1               ; 0..3  (1 is the default)
    86                              <1> 
    87                              <1> ; Define the number of Wait States for ECB BUS peripheral devices (4xx)
    88                              <1> BUS_IO_WS       equ     3               ; 0..3  (3 is the default)
    89                              <1> 
    90                              <1> ; Define the time zone in which we build the Relocatable BIOS
    91                              <1> %ifndef TIMEZONE
    92                              <1> %define TIMEZONE "CST"
    93                              <1> %endif
    94                              <1> 
    95                              <1> ; Has the REDBUG debugger been loaded?
    96                              <1> %ifndef SOFT_DEBUG
    97                              <1> %define SOFT_DEBUG 0
    98                              <1> %endif
    99                              <1> 
   100                              <1> ; Should the BIOS include "Tiny BASIC" in the image?
   101                              <1> %ifndef TBASIC
   102                              <1> TBASIC          equ     1		; default is 1
   103                              <1> %endif
   104                              <1> 
   105                              <1> ; Should the BIOS include the Floating Point Emulator?  The 80188 does
   106                              <1> ; not allow a floating point co-processor, so this is probably a good idea.
   107                              <1> %ifndef FPEM
   108                              <1> FPEM            equ     1               ; default is 1
   109                              <1> %endif
   110                              <1> 
   111                              <1> ; Should the Floating Point Emulator use temporary storage in the EBDA
   112                              <1> ; or at locations 0280h..3FFh in low memory?
   113                              <1> %if SOFT_DEBUG
   114                              <1> FPEM_USE_EBDA   equ     FPEM            ; default is 0
   115                              <1> %else
   116                              <1> FPEM_USE_EBDA   equ     0; FPEM            ; default is 0
   117                              <1> %endif
   118                              <1> 
   119                              <1> ; Define the size of the EPROM that is to be installed on the system
   120                              <1> ; It may be larger than the actual ROM image to be generated.
   121                              <1> %ifndef CHIP
   122                              <1> CHIP            equ     64
   123                              <1> %endif
   124                              <1> 
   125                              <1> ; Define the UART oscillator speed
   126                              <1> UART_OSC        equ     1843200         ; 1.8432 Mhz is specified
   127                              <1> 
