   150                              <1> DMASPU	        equ	2	; source pointer high
   151                              <1> DMADPL	        equ	4	; destination pointer low
   152                              <1> DMADPU	        equ	6	; destination pointer high
   153                              <1> DMATC	        equ	8	; terminal count
   154                              <1> DMACW	        equ	0AH	; control word
