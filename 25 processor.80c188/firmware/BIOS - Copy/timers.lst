   387                                  ;       DL = new contents of address
   388                                  ;
   389                                  ; the RAM location is updated with the new contents
   390                                  ; and the checksum (location 30) is maintained at zero
   391                                  ;
   392                                  updateCMOS:
   393 000000FA 5253                            pushm   bx,dx
   394                                  
   395 000000FC B480                            mov     ah,80h
   396 000000FE 50                              push    ax
   397 000000FF E8(0000)                        call    rtc_get_loc
   398 00000102 93                              xchg    ax,bx
   399 00000103 28D3                            sub     bl,dl           ; difference between contents
   400 00000105 58                              pop     ax
   401 00000106 7412                            jz      .5              ; jump if no change
   402 00000108 E8(0000)                        call    rtc_set_loc     ; set DL, the changed value
   403 0000010B B81E80                          mov     ax,8000h+30     ; get checksum location
   404 0000010E 50                              push    ax              ; save address
   405 0000010F E8(0000)                        call    rtc_get_loc
   406 00000112 00D8                            add     al,bl           ; update checksum
   407 00000114 88C2                            mov     dl,al
   408 00000116 58                              pop     ax
   409 00000117 E8(0000)                        call    rtc_set_loc
   410                                  .5:
   411 0000011A 5B5A                            popm    bx,dx
   412 0000011C C3                              ret
